<Window x:Class="Rogue.WorldEditor.TileSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rogue.WorldEditor"
        mc:Ignorable="d"
        Title="TileSelection" Height="450" Width="827.229">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="206,10,18,21">
            <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="401" Margin="53,21,0,0" VerticalAlignment="Top" Width="684"/>
        </ScrollViewer>
        <Rectangle Name="selectedTile" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="160" Margin="10,31,0,0" Stroke="Black" VerticalAlignment="Top" Width="176"/>

        <Label Name="tilename" Content="Tilename: " HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <ListBox SelectionChanged="FolderSelection_SelectionChanged" x:Name="folderSelection" HorizontalAlignment="Left" Height="190" Margin="10,208,0,0" VerticalAlignment="Top" Width="176"/>

    </Grid>
</Window>
