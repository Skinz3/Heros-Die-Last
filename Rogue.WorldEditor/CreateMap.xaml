<UserControl x:Class="Rogue.WorldEditor.CreateMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rogue.WorldEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox PreviewTextInput="NumberValidationTextBox" Name="width" HorizontalAlignment="Left" Height="23" Margin="59,13,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120"/>
        <Label Content="Width :" HorizontalAlignment="Left" Margin="6,10,0,0" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="NumberValidationTextBox" Name="height" HorizontalAlignment="Left" Height="23" Margin="59,41,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120"/>
        <Label Content="Height :" HorizontalAlignment="Left" Margin="6,38,0,0" VerticalAlignment="Top"/>
        <Button Content="Create Map" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="169" Height="30" Click="Button_Click"/>

    </Grid>
</UserControl>
